{{#if indexed_videos }}
<div id="emailbox" class="">
  <div id="emailstream">
    <div class="container pl-4 pr-4 pt-2">
      {{#each indexed_videos}}
      <a href="{{this.id}}">
      <div class="row mb-2 pr-2">
        <div class="col-12">
          noreply@VideoIndexerDesk.demo
        </div>
        <div class="col-7 text-truncate">
          <small>{{ this.fileName }}</small>
        </div>
        <div class="col-3 ml-auto">
            <small class="ml-auto">1/11/2019</small>
        </div>
        <div class="col-10 text-truncate">
          <small>
            New upload, we found
            {{#each this.labels}}
                {{ this.name }} ( {{ this.meanConfidence }} )
            {{/each}}
          </small>
        </div>
      </div>
      </a>
      {{/each}}
    </div>
  </div>
  <div id="emailcontent" class="p-2">

    Hi,

    a new video with the filename {{selected_video.fileName }} was uploaded and successfully indexed.
    <br />
    <a href="player/{{selected_video.id}}">Hier</a> im Miniplayer ansehen

    {{#if selected_video.insights.labels }}
      <br />
      <br />
      <b>Labels:</b> {{#each selected_video.insights.labels }} {{this.name}} {{#unless @last}},{{/unless}} {{/each}}
    {{/if}}

    
    {{#if selected_video.insights.topics }}
      <br />
      <br />
      <b>Themen:</b> {{#each selected_video.insights.topics }} {{this.name}} {{#unless @last}},{{/unless}} {{/each}}
    {{/if}}


    {{#if selected_video.insights.topics }}
      <br />
      <br />
      <b>Identifizierte Personen:</b> {{#each selected_video.insights.namedPeople }} {{this.name}} {{#unless @last}},{{/unless}} {{/each}}
    {{/if}}

    
    {{#if selected_video.insights.faces }}
      <br />
      <br />
      <b>Personengesichter:</b> 
      <div class="container-fluid">
        <div class="row">
          {{#each selected_video.insights.faces }}
            <div class="col-4 p-2">
              <img width="40" height="40" src="{{this.uri}}">
              {{this.name}}
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}

    
    {{#if selected_video.insights.transcript }}
      <br />
      <br />
      <b>Transkript:</b>
      <div class="container-fluid">
        <div class="row">
            <div class="col-6 pb-2">
              Text
            </div>
            <div class="col-3 pb-2">
              von
            </div>
            <div class="col-3 pb-2">
              bis
            </div>
        </div>
        <hr />
        <div class="row">
          {{#each selected_video.insights.transcript }}
            <div class="col-6 pb-2">
              {{this.text}}
            </div>
            <div class="col-3 pb-2">
              {{this.instances.0.start}}
            </div>
            <div class="col-3 pb-2">
              {{this.instances.0.end}}
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}

    {{#if selected_video.insights.ocr }}
      <br />
      <br />
      <b>OCR Erkennung:</b>
      <div class="container-fluid">
        <div class="row">
            <div class="col-8 pb-2">
              Text
            </div>
            <div class="col-4 pb-2">
              Sicherheit
            </div>
        </div>
        <div class="row">
          {{#each selected_video.insights.ocr }}
            <div class="col-8 pb-2">
              {{this.text}}
            </div>
            <div class="col-4 pb-2">
              {{this.confidence}}
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}


  </div>
    <div id="emailfrom" class="text-truncate">
      <p>From: Video Indexer &lt;noreply@VideoIndexerDesk.demo>&gt;</p>
  </div>
</div>
{{else}}
  Upload at least one video to use the email demo.
{{/if}}