{{!-- Upload Form --}}
<h1>Upload new file</h1>
<p>
<form action="/file-upload/new" class="form-inline my-2 my-lg-0" method="POST" enctype="multipart/form-data">
    <div class="input-group mb-3">
        <div class="custom-file">
            <input type="file" name="file" class="custom-file-input" id="inputGroupFileUpload">
            <label class="custom-file-label" for="inputGroupFileUpload"
                aria-describedby="inputGroupFileAddon02">Choose file</label>
        </div>
        <div class="input-group-append">
            <button class="input-group-text" id="inputGroupFileAddon02" type="submit"
                class="btn">Upload</button>
        </div>
    </div>
</form>
</p>
